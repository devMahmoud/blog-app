<%= stylesheet_link_tag "styles" %>

<%= render 'card', user: @user%>
<div class="bio">
  <h4>Bio</h4>
  <p><%= @user.bio %></p>
</div>
<div class="recent-posts">
<% @user.recent_posts.each do |post| %>
  <%= link_to user_post_path(@user.id, post.id) do %>
  <div class="post">
    <p><%= post.title %></p>
    <p><%= post.text %></p>
    <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
  </div>
  <% end %>
<% end %>
</div>
<div class="see-more">
  <%= link_to user_posts_path(@user.id) do %>
        <button type="button">See All Posts</button>
    <%end%>
    <button type="button"><%= link_to "New Post", new_user_post_path(@user.id) %></button>
</div>
<% if @user == current_user %>
Your api token is: <%= @user.api_token %>
<% end %>
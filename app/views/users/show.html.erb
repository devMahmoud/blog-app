<%= stylesheet_link_tag "styles" %>

<%= render 'card', user: @user%>
<div class="bio">
  <h4>Bio</h4>
  <p><%= @user.bio %></p>
</div>
<div class="recent-posts">
<% @user.recent_posts.each do |post| %>
  <div class="post">
    <p><%= post.title %></p>
    <p><%= post.text %></p>
    <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
  </div>
<% end %>
</div>
<div class="see-more">
  See all posts
</div>
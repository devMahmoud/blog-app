<%= stylesheet_link_tag "styles" %>
<div class="post-header">
  <div class="post-title">
    <div>
    <p><%= @post.title %> by <%= @post.author.name%></p>
      <%=form_with :url => user_post_likes_path(@user, @post), :method => :post, :class => 'new-like' do |f|%>
      <%= f.button do %>
        Like
      <% end %>
    <%end%>
    </div>
    <p>comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
  </div>
  <p><%= @post.text %></p>
</div>
<div class="post-comments">
  <% @comments.each do |comment| %>
    <p><%= @post.author.name%> : <%= comment.text %></p>
  <% end %>
  <%=form_with :url => user_post_comments_path(@user, @post), :method => :post, :class => 'new-comment' do |f|%>
      <%=f.text_field :text, placeholder: 'Comment'%>
      <%=f.submit 'Comment'%>
    <%end%>
</div>